{
  "name": "@h-arnold/codex-delegate",
  "version": "0.1.0",
  "description": "A quick and dirty cli tool that enables easy delegation of tasks to codex sub-agents.",
  "type": "module",
  "main": "dist/codex-delegate.js",
  "types": "dist/codex-delegate.d.ts",
  "files": [
    "dist/",
    "bin/"
  ],
  "bin": {
    "codex-delegate": "bin/codex-delegate.js"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:cov": "vitest --coverage",
    "build": "tsc -p .",
    "lint": "eslint . --ext .ts,.tsx  --fix",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "prettier:check": "prettier --check .",
    "lint:md": "markdownlint \"**/*.md\" -c .markdownlint.json",
    "prepare": "husky",
    "husky:init": "npx husky init",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.7.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^62.5.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.8.1",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,css,scss,html}": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/h-arnold/codex-delegate.git"
  },
  "keywords": [
    "Codex",
    "delegate",
    "subagent",
    "npm",
    "cli"
  ],
  "author": "Hamish Arnold",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/h-arnold/codex-delegate/issues"
  },
  "homepage": "https://github.com/h-arnold/codex-delegate#readme",
  "dependencies": {
    "@openai/codex-sdk": "^0.93.0"
  }
}
